<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScreenActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="394dp"
        android:layout_height="672dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainScreenActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="15dp">


            <Spinner
                android:id="@+id/marka"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:entries="@array/markalar"
                android:hint="Marka giriniz"
                android:inputType="text" />


            <Spinner
                android:id="@+id/model"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:entries="@array/modeller"
                android:hint="Seri giriniz"
                android:inputType="text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/goruntule"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="163dp"
                android:layout_height="48dp"
                android:background="@drawable/aracgoruntulebutton"
                android:text="Aracı Görüntüle"
                android:textColor="@color/design_default_color_background"
                android:textColorHighlight="@color/design_default_color_error"
                android:textColorHint="#FE2517"
                android:textColorLink="#FE2517"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bilgi"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="182dp"
                android:layout_height="65dp"
                android:background="@drawable/aracbilgibutton"
                android:text="Araç Bilgileri"
                android:textColor="@color/design_default_color_background"
                android:textColorHighlight="@color/design_default_color_error"
                android:textColorHint="#FE2517"
                android:textColorLink="#FE2517" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>